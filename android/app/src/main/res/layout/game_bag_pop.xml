<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D1CFCB"
    app:cardCornerRadius="20dp">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/game_bag_recycler"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/game_bag_title"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/game_bag_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Bag"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/game_bag_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_light"
        android:layout_marginTop="20dp"
        android:layout_below="@id/game_bag_recycler"
        android:text="Back to Game"
        android:textColor="#FFFFFF" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D1CFCB"
    app:cardCornerRadius="20dp">


    <Button
        android:id="@+id/game_menu_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/game_menu_edit_text"
        android:layout_marginTop="25dp"
        android:text="Save current game"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/game_menu_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Menu"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/game_menu_load"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/game_menu_save"
        android:layout_marginTop="25dp"
        android:textSize="18sp"
        android:text="Load a Save" />
    <Button
        android:id="@+id/game_menu_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/game_menu_load"
        android:layout_marginTop="25dp"
        android:textSize="18sp"
        android:text="Settings" />

    <Button
        android:id="@+id/game_menu_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/game_menu_settings"
        android:layout_marginTop="25dp"
        android:textSize="18sp"
        android:text="Exit to Main Menu"
        android:textColor="@android:color/holo_red_light" />
    <Button
        android:id="@+id/game_menu_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/game_menu_exit"
        android:layout_marginTop="25dp"
        android:textSize="18sp"
        android:text="Back to Game" ></Button>

    <EditText
        android:id="@+id/game_menu_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/game_menu_title"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Enter a Save name"
        android:inputType="textPersonName"
        android:textAlignment="center" />

</RelativeLayout>